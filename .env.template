# EVE LI XML Generator Environment Configuration
# =============================================
# 
# Copy this file to .env and fill in your actual credentials
# The .env file should be added to .gitignore for security
#

# ============================================================================
# Database Configuration
# ============================================================================
DB_HOST=localhost
DB_DATABASE=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_PORT=3306

# ============================================================================
# Netshot API Configuration (V2)
# ============================================================================
NETSHOT_API_URL=https://netshot.yourdomain.com/api

# API Key authentication (recommended)
NETSHOT_API_KEY=your-netshot-api-key

# OR Basic Auth (alternative)
# NETSHOT_USERNAME=your-netshot-username
# NETSHOT_PASSWORD=your-netshot-password

# ============================================================================
# Legacy API Configuration (V1 - deprecated)
# ============================================================================
API_BASE_URL=https://appdb.oss.local/isw/api
API_AUTH_TOKEN=aXN3OlNweWVtX090R2hlYjQ=
API_TIMEOUT=30

# ============================================================================
# Cache Configuration
# ============================================================================
# Enable/disable caching (true/false)
CACHE_ENABLED=true

# Cache directory - use .cache for local, /app/cache for Docker
CACHE_DIR=.cache

# Cache TTL in seconds (86400 = 24 hours, recommended for daily generation)
CACHE_TTL=86400

# ============================================================================
# Azure AD / Office 365 Authentication (for Web App)
# ============================================================================
AZURE_AUTHORITY=https://login.microsoftonline.com/common
AZURE_CLIENT_ID=your-azure-app-client-id
AZURE_CLIENT_SECRET=your-azure-app-client-secret

# ============================================================================
# Flask Web Application
# ============================================================================
FLASK_SECRET_KEY=change-this-to-a-random-secret-key
FLASK_DEBUG=false
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
APP_TITLE=EVE LI XML Generator

# ============================================================================
# DHCP Database (if different from main database)
# ============================================================================
DHCP_DB_HOST=localhost
DHCP_DB_DATABASE=your_dhcp_database
DHCP_DB_USER=your_dhcp_user
DHCP_DB_PASSWORD=your_dhcp_password

# ============================================================================
# Email Configuration
# ============================================================================
EMAIL_SMTP_SERVER=localhost
EMAIL_SMTP_PORT=587

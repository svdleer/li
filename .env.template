# ============================================================================
# Upload Configuration
# ============================================================================
UPLOAD_API_BASE_URL=https://172.17.130.70:2305
UPLOAD_API_USERNAME=xml_import
UPLOAD_API_PASSWORD=your_api_password_here
UPLOAD_TIMEOUT=600

# Verification mode: true = simulate uploads, false = actual uploads
UPLOAD_VERIFICATION_MODE=true

# ============================================================================
# Paths Configuration
# ============================================================================

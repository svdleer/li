# Demo Environment Configuration
# This configuration uses demo/mock data - no real credentials needed!

# ============================================================================
# Flask Web Application Settings
# ============================================================================
FLASK_SECRET_KEY=demo-secret-key-not-for-production
FLASK_DEBUG=true
FLASK_HOST=0.0.0.0
FLASK_PORT=8080
APP_TITLE=EVE LI XML Generator (DEMO MODE)

# ============================================================================
# DEMO MODE - Enable this to use mock data
# ============================================================================
DEMO_MODE=true

# ============================================================================
# Azure AD / Office 365 Authentication (NOT USED IN DEMO MODE)
# ============================================================================
AZURE_AUTHORITY=https://login.microsoftonline.com/common
AZURE_CLIENT_ID=demo-client-id
AZURE_CLIENT_SECRET=demo-client-secret

# ============================================================================
# Netshot API Configuration (NOT USED IN DEMO MODE)
# ============================================================================
NETSHOT_API_URL=https://demo-netshot.local/api
NETSHOT_USERNAME=demo
NETSHOT_PASSWORD=demo

# ============================================================================
# Database Configuration (NOT USED IN DEMO MODE)
# ============================================================================
DB_HOST=demo-db
DB_DATABASE=demo_database
DB_USER=demo_user
DB_PASSWORD=demo_password
DB_PORT=3306

# ============================================================================
# DHCP Database Configuration (NOT USED IN DEMO MODE)
# ============================================================================
DHCP_DB_HOST=demo-db
DHCP_DB_DATABASE=demo_dhcp
DHCP_DB_USER=demo_user
DHCP_DB_PASSWORD=demo_password
DHCP_DB_PORT=3306

# ============================================================================
# EVE LI Upload API Configuration (NOT USED IN DEMO MODE)
# ============================================================================
UPLOAD_API_BASE_URL=https://demo-eve-server:2305
UPLOAD_API_USERNAME=demo_import
UPLOAD_API_PASSWORD=demo_password
UPLOAD_TIMEOUT=600
UPLOAD_VERIFICATION_MODE=true

# ============================================================================
# File Paths
# ============================================================================
OUTPUT_DIR=output
SCHEMA_FILE=EVE_IAP_Import.xsd

# ============================================================================
# Triggers and Scheduling
# ============================================================================
TRIGGER_FILE=trigger.txt
SCHEDULE_TIME=02:00
WEEKDAYS_ONLY=true

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_TO_DATABASE=false
LOG_TABLE=eve_xml_log
STATUS_TABLE=eve_xml_status
